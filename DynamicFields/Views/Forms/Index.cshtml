@model DynamicFields.Models.FormsListViewModel

@{
    ViewBag.Title = "Forms";
}

<h2>Dynamic forms @Html.ActionLink("Add", "Edit", null, new {@class = "btn btn-info"})</h2>

<table class="table table-hover">
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th style="width: 20px"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var f in Model.Forms)
    {
        <tr>
            <td>@Html.ActionLink(f.Name, "Edit", new { id = f.Id })</td>
            <td>@f.Description</td>
            <td>@Html.ActionLink("delete", "Delete", new {id = f.Id})</td>
        </tr>
    }
    </tbody>
</table>